@model MultipleChoiceQuestion
@{
    ViewData["Title"] = "MultipleChoiceAnswer";
}

<tr>
    <h3>MultipleChoiceAnswer</h3>
    <h2>@Model.question</h2>
<tr>
    <input asp-for="id" type="hidden" />
</tr>
    <tr>
        <table class="table">
            @for (int i = 0; i < Model.choices.Length; i++)
            {
            <tr>
                <input asp-for="answer" type="radio" value="@Model.choices[i]" />@Model.choices[i]
            </tr>
            }
            </table>
</tr>
</tr>
