
@{
    ViewData["Title"] = "Index";
}

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>

<fieldset>
    <div class="container">
        @Html.ValidationSummary()
        <form method="post" action="/Standard/Index">
            <div>
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    <input name="Name" id="Name" maxlength="50" size="30" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="AdministratorPassword" class="control-label">Addministrator Password</label>
                    <input type="password" name="AdministratorPassword" id="AdministratorPassword" maxlength="50" size="30" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Location" class="control-label">Location</label>
                    <input name="Location" id="Location" maxlength="50" size="30" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="IPAddress" class="control-label">IP Address</label>
                    <input name="IPAddress" id="IPAddress" maxlength="50" size="30" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Description" class="control-label">Description</label>
                    <textarea name="Description" id="Description" rows="5" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="SupportedMonitors" class="control-label">Supported Monitors</label>
                    <input name="SupportedMonitors" id="SupportedMonitors" max="50" size="30" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="OS" class="control-label">OS</label>
                    <select name="OS" id="OS" class="form-control">
                        @foreach (var item in ComputerModel.OSTypes)
                        {
                            <option>@item</option>
                        }
                    </select>                
                </div>
                <div class="form-group">
                    <input value="Submit" type="submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</fieldset>